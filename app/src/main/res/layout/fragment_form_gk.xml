<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Spinner
            android:id="@+id/spinner_zas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp" />

        <EditText
        android:id="@+id/gk_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="16dp"
        android:hint="Жилой Комплекс"
        android:textSize="24sp"
         />

    <EditText
        android:id="@+id/gk_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gk_name"
        android:layout_marginTop="16dp"
        android:hint="Адрес"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/gk_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gk_adress"
        android:layout_marginTop="16dp"
        android:hint="Сайт"
        android:textSize="24sp"
         />


    <Button
        android:id="@+id/btnInsert_GK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gk_website"
        android:layout_marginTop="60dp"
        android:text="Сохранить"
        android:textSize="24sp"
         />

    <Button
        android:id="@+id/btnView_GK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnInsert_GK"
        android:layout_marginTop="32dp"
        android:text="Просмотр"
        android:textSize="24dp"
         />






    </LinearLayout>
</ScrollView>